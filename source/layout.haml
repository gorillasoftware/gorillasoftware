<!--[if (gte IE 9)|!(IE)]!-->
%html{:class => "no-js", :lang => "en"}
  <!--<![endif]-->
  %head
    %meta{:charset => "utf-8"}

    %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}
    = yield_content :head

    %meta{:name => "description", :content => "Gorilla Software bietet individuelle Lösungen fürs Web. Wir programmieren aus Leidenschaft und verfolgen dabei einen agilen und pragmatischen Softwareentwicklungsansatz. Die Nachhaltigkeit unserer Arbeit ist uns wichtig.  Mit Rapid Prototyping können wir Kundenbedürfnisse frühzeitig erkennen. Test-Driven Development hilft uns dabei, Qualität zu einer Anforderung zu machen."} 
    %meta{:name => "author", :content => "gorilla software"}

    -# rss feed
    %link{:href => "http://blog.gorillasoftware.ch/rss.xml", :rel => "alternate", :title => "gorilla software blog feed (rss)", :type => "application/rss+xml"}
    %link{:href => "http://blog.gorillasoftware.ch/atom.xml", :rel => "alternate", :title => "gorilla software blog feed (atom)", :type => "application/atom+xml"}

    -# Mobile viewport optimized: j.mp/bplateviewport
    %meta{:name =>"viewport", :content => "width=device-width, initial-scale=1.0"}

    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    %link{:rel => "apple-touch-icon", :href => "/apple-touch-icon.png"}

    -# CSS: implied media="all"
    %noscript
      %link{:href => "stylesheets/mobile.css", :rel => "stylesheet"}
    :javascript
      var ADAPT_CONFIG = {
        path: 'stylesheets/',
        dynamic: true,
        range: [
          '0px    to 960px  = mobile.css',
          '960px            = 960.css'
        ]
      };
    = javascript_include_tag "libs/adapt.min.js"
    = javascript_include_tag "libs/modernizr-1.7.min.js"

  %body
    = yield

    #footer
      #footer-container
        #footernav
          %h5 Navigation
          %ul
            %li 
              =link_to "Vision", "#"
            %li
              =link_to "Lösungen", "#solutions"
            %li
              =link_to "Team", "#team"
            %li
              =link_to "Kontakt", "#contact"
        #footercontact
          %h5 Kontakt
          %ul.address
            %li gorilla software GmbH
            %li Baumgasse 10
            %li CH-8005 Zürich
            %li
              =mail_to "hi@gorillasoftware.ch"
            %li Tel: +41 (0) 44 508 07 73
        #footermore
          %h5 Mehr
          %ul
            %li
              =link_to "Blog", "http://blog.gorillasoftware.ch"
      #footermeta
        #footerversion
          Version: 
          =version()

    -# Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary
    =javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"
    = javascript_include_tag "libs/handlebars.1.0.0.beta.3.js"
    = javascript_include_tag "script.js"

    /[if lt IE 7 ]
      = javascript_include_tag "libs/dd_belatedpng.js"
      :javascript
        DD_belatedPNG.fix("img, .png_bg");

    = google_analytics "UA-24038149-1"
    = uservoice "Iq96uoNqdtEset33q6mSJA"

    // Additional body stuff to load (e.g. javascripts)
    = yield_content :post_body

