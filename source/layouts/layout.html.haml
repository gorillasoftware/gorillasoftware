%html
  %head
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:name => "description", :content => "gorilla software GmbH, a web development shop in ZÃ¼rich, Switzerland"}/
    %title= title

    =favicon_tag "/apple-touch-icon-144x144-precomposed.png", rel: "apple-touch-icon-precomposed apple-touch-icon", sizes: "144x144"
    =favicon_tag "/apple-touch-icon-114x114-precomposed.png", rel: "apple-touch-icon-precomposed apple-touch-icon", sizes: "114x114"
    =favicon_tag "/apple-touch-icon-72x72-precomposed.png", rel: "apple-touch-icon-precomposed apple-touch-icon", sizes: "72x72"
    =favicon_tag "/apple-touch-icon-precomposed.png", rel: "apple-touch-icon-precomposed apple-touch-icon"
    =favicon_tag "/favicon.png", rel: "shortcut icon", type: "image/ico"
    =favicon_tag "/favicon.ico", rel: "icon", type: "image/ico"

    %link{ :href => "http://creativecommons.org/licenses/by/3.0/", :rel => "license", :title => "Creative Commons Attribution 3.0 Unported License" }

    = stylesheet_link_tag "app"
    = javascript_include_tag "modernizr.js"
    = javascript_include_tag "//use.typekit.net/iof8zoc.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body{class: page_classes}
    = yield_content :before
    %header#header-container
      = yield_content :before_nav
      =partial 'navigation'
    #content-container
      #content= yield
    %footer#footer-container
      =partial 'footer'
    = javascript_include_tag "http://code.jquery.com/jquery-1.10.1.min.js"
    = javascript_include_tag  "all"

    = yield_content :after
    = google_analytics_tag
