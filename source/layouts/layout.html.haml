!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= current_page.data.title || "The Middleman"

    = stylesheet_link_tag "normalize", "app", "style"
    = javascript_include_tag "_vendor/modernizr.js"
    = javascript_include_tag "//use.typekit.net/iof8zoc.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body{ "class" => page_classes,
    "data-grid-color" => "blue",
    "data-grid-framework" => "f4",
    "data-grid-nbcols" => "12",
    "data-grid-opacity" => "0.5",
    "data-grid-zindex" => "10" }
    = yield
  = javascript_include_tag "http://code.jquery.com/jquery-1.10.1.min.js"
  = javascript_include_tag  "site"
