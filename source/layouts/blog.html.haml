!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= current_page.data.title || "gorilla software"

    = stylesheet_link_tag "normalize", "app", "style"
    = javascript_include_tag "modernizr.js"
    = javascript_include_tag "//use.typekit.net/iof8zoc.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body{class: page_classes}
    .row
      .content.columns.large-8
        = yield
      %aside.nav.columns.large-4
        %h2 Recent Articles
        %ol
          - blog.articles[0...10].each do |article|
            %li
              = link_to article.title, article
              %span= article.date.strftime('%b %e')
        %h2 Tags
        %ol
          - blog.tags.each do |tag, articles|
            %li
              = link_to tag, tag_path(tag)
              (#{articles.size})
        %h2 By Year
        %ol
          - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
            %li
              = link_to year, blog_year_path(year)
              (#{articles.size})
    = javascript_include_tag "http://code.jquery.com/jquery-1.10.1.min.js"
    = javascript_include_tag  "site"
