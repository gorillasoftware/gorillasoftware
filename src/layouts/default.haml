/[if IE 9 ] <html lang="en" class="no-js ie9">
/ [if (gt IE 9)|!(IE)]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    /
      Always force latest IE rendering engine (even in intranet) & Chrome Frame
      Remove this if you use the .htaccess
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title staticmatic
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    / Mobile viewport optimized: j.mp/bplateviewport
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    / Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}
    / CSS : implied media="all"
    %link{:href => "stylesheets/screen.css?v=2", :rel => "stylesheet"}
    / Uncomment if you are specifically targeting less enabled mobile browsers
    / <link rel="stylesheet" media="handheld" href="css/handheld.css?v=2">
    / All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects
    %script{:src => "javascripts/libs/modernizr-1.6.min.js"}

  %body
    %header
      .inner
        %nav
          %ul
            %li
              %a{:href => "#about"} About
            %li
              %a{:href => "#examples"} Examples
            %li
              %a{:href => "#documentation"} Full Documentation
    = yield
    %footer
      %p
        A project of
        %a{:href => "http://imakewebthings.com/", :target => "_blank"} I Make Web Things
    %script{:src => "javascripts/libs/waypoints-1.0.2.min.js"}

    / ! end of #container
    / Javascript at the bottom for fast page loading
    / Grab Google CDN's jQuery. fall back to local if necessary
    = javascripts("https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js")
    :javascript
      window.jQuery && document.write(unescape('%3Cscript src="javascripts/libs/jquery-1.6.0.js"%3E%3C/script%3E'));
    / end concatenated and minified scripts
    /[if lt IE 7 ]
      <script src="javascripts/libs/dd_belatedpng.js"></script>
      <script> DD_belatedPNG.fix('img, .png_bg'); //fix any <img> or .png_bg background-images </script>
    / yui profiler and profileviewer - remove for production
    = javascripts('profiling/yahoo-profiling.min','profiling/config')
    / end profiling code
    /
      include my compressed javascript plugins/libs
    = javascripts('site.min')
    /
      use google analytics helper
      change the UA-XXXXX-X to be your site's ID
    = ga('UA-XXXXX-X')
